{
  "name": "poke-tools",
  "version": "1.0.0",
  "description": "A collection of utilities and MCPs to increase Poke's abilities",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome check .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write ."
  },
  "keywords": [
    "poke",
    "mcp",
    "slack",
    "webhooks"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "fastify": "^5.3.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.1.3",
    "slack-mcp-server": "^1.1.28",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
