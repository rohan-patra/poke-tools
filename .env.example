# Server
PORT=3000
NODE_ENV=development

# Poke Integration
POKE_BEARER_TOKEN=your_poke_bearer_token

# =============================================================================
# Slack Events Webhook
# =============================================================================
# Enable/disable Slack events processing
SLACK_EVENTS_ENABLED=true

# Multiple workspaces supported via SLACK_WORKSPACE_N_* pattern
# Each workspace needs: NAME, ENDPOINT, SIGNING_SECRET, BOT_TOKEN

# Workspace 1 (e.g., workspace1)
SLACK_WORKSPACE_1_NAME=workspace1
SLACK_WORKSPACE_1_ENDPOINT=workspaceendpoint1
SLACK_WORKSPACE_1_SIGNING_SECRET=your_signing_secret_1
SLACK_WORKSPACE_1_BOT_TOKEN=xoxp-your-user-token-1
# Optional: comma-separated channel IDs to ignore webhooks from
# SLACK_WORKSPACE_1_CHANNEL_BLOCKLIST=C1234567890,C0987654321

# Workspace 2 (e.g., acme) - uncomment to add another workspace
# SLACK_WORKSPACE_2_NAME=acme
# SLACK_WORKSPACE_2_ENDPOINT=abc123def456789...
# SLACK_WORKSPACE_2_SIGNING_SECRET=your_signing_secret_2
# SLACK_WORKSPACE_2_BOT_TOKEN=xoxp-your-user-token-2

# =============================================================================
# Slack MCP Proxy (korotovsky/slack-mcp-server)
# =============================================================================
# Enable/disable Slack MCP proxy
SLACK_MCP_ENABLED=true

# Binary path (default: slack-mcp-server from node_modules/.bin)
# SLACK_MCP_BINARY_PATH=slack-mcp-server

# Starting port for internal MCP servers (each workspace gets port_start + index)
# SLACK_MCP_INTERNAL_PORT_START=13080

# Multiple workspaces supported via SLACK_MCP_N_* pattern
# Each workspace needs: NAME, ENDPOINT, AUTH_MODE, and tokens based on auth mode

# MCP Workspace 1: workspace1
SLACK_MCP_1_NAME=workspace1
SLACK_MCP_1_ENDPOINT=mcpendpoint1
SLACK_MCP_1_AUTH_MODE=browser
SLACK_MCP_1_XOXC_TOKEN=xoxc-your-token
SLACK_MCP_1_XOXD_TOKEN=xoxd-your-token
# Enable sending messages (disabled by default for safety)
# Options: true (all channels), C1234567890,D0987654321 (specific channels), !C1234567890 (all except)
SLACK_MCP_1_ADD_MESSAGE_TOOL=true

# MCP Workspace 2 - uncomment to add another workspace
# SLACK_MCP_2_NAME=Acme
# SLACK_MCP_2_ENDPOINT=abc123def456789...
# SLACK_MCP_2_AUTH_MODE=bot
# SLACK_MCP_2_XOXB_TOKEN=xoxb-your-bot-token
# SLACK_MCP_2_ADD_MESSAGE_TOOL=true

# Auth mode options:
# - browser: requires XOXC_TOKEN and XOXD_TOKEN (extract from browser, full access)
# - oauth: requires XOXP_TOKEN (user token from OAuth flow)
# - bot: requires XOXB_TOKEN (limited: no search, invited channels only)
